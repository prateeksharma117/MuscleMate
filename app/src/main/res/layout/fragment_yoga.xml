<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".YogaFragment"
    android:scrollbars="none"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/planRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:layout_below="@+id/planRecyclerView"
            android:layout_margin="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="@dimen/_17sdp"/>

            <LinearLayout
                android:id="@+id/dailyLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/daily"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_150sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/yogaPlanImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sunrise"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:id="@+id/gradient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gradient" />

                    <TextView
                        android:id="@+id/mainText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunrise Yoga"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="@dimen/_17ssp"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_150sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/yogaPlanImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/streaching"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gradient" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="Streaching"
                        android:textColor="#fff"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        <TextView
            android:id="@+id/focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dailyLinearLayout"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Body Focus"
            android:textColor="#000"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/bodyFocus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/focus"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/chest"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/chest"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gradient" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_8sdp"
                        android:text="Chest"
                        android:textColor="#fff"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/belly"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/bellyimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/belly"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:id="@+id/gradient1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gradient" />

                    <TextView
                        android:id="@+id/mainText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_8sdp"
                        android:text="Belly"
                        android:textColor="#fff"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/focus"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/leg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/arm"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gradient" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arm"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="@dimen/_17ssp"
                        android:padding="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/arm"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/legs"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gradient" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_8sdp"
                        android:text="Legs"
                        android:textColor="#fff"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/fatBurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat burning"
                android:layout_below="@+id/bodyFocus"
                android:layout_margin="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="@dimen/_17sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fatBurnRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/stress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stress relief and relax"
                android:layout_below="@+id/bodyFocus"
                android:layout_margin="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="@dimen/_17sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stressRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp"/>

        </LinearLayout>





    </RelativeLayout>





















</ScrollView>